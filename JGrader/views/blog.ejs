  <body>
    
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="navbar-header">
        <a class="navbar-brand" href="/">jGrader</a>
      </div>
      <div id="navbar" class="navbar-collapse collapse">
        <ul class="nav navbar-nav navbar-right">
          <li id="link-home"><a href="/">Home</a></li>
          <li id="link-learn"><a href="/#learn">Learn</a></li>
          <li id="link-sign-in"><a href="/sign-in">Sign In</a></li>
        </ul>
      </div>
    </nav>

    <div class="container">
      <h1>Blog<a href="/blog.rss" class="fa fa-rss-square"></a></h1>
      <% for(i in posts) { %>
        <p>
          <h3><%= posts[i].title %></h3>
          <h5>Posted by <%= posts[i].author %> on <%= strftime('%B %e, %Y at %l:%M %P %Z', posts[i].timestamp)%></h5>
          <%= posts[i].contents %>
        </p>
      <% } %>
