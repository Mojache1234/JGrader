<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <!--<link rel="icon" href="../../favicon.ico">-->

    <title>Feedback | JGrader</title>

    <!-- Bootstrap core CSS -->
    <link href="/stylesheets/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="/stylesheets/signin.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>

  <body>

    <div class="container">
      <form class="form-signin" role="form" action="/feedback" method="POST">
  		  <h2 class="form-signin-heading">Feedback</h2>
        <% if(typeof error != 'undefined') { %>
          <div class="alert alert-danger alert-dismissable" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <%= error %>
          </div>
        <% } %>
        <% if(typeof success != 'undefined') { %>
          <div class="alert alert-success alert-dismissable" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <%= success %>
          </div>
        <% } %>
        <div class="report-type">
          <label>What are you reporting?</label>
          <label><input type="radio" name="type" value="question" required>Question</label>
          <label><input type="radio" name="type" value="comment">Comment</label>
          <label><input type="radio" name="type" value="complaint">Complaint</label>
          <label><input type="radio" name="type" value="other">Other</label>
        </div>
        <textarea class="form-control" rows="4" name="feedback" placeholder="What would you like to tell us?" required></textarea>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
  		</form>
    </div> <!-- /container -->


    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="/javascripts/ie10-viewport-bug-workaround.js"></script>
    <script src="/javascripts/jquery-2.1.1.min.js"></script>
    <script src="/javascripts/bootstrap.min.js"></script>
  </body>
</html>
