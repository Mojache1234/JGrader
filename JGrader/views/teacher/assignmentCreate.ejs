<div class="page-header" id="header-assignments">
  <div class="left-header">
    <h1>Assignments</h1>
  </div>
  <div class="right-header">
    <div class="name">
      Create New
    </div>
  </div>
</div>
<form action="/teacher/assignment/create" method="post" class="form" id="assign-create">
  <input type="text" class="form-control" placeholder="Name" name="name" required autofocus <%- typeof name == 'undefined' ? '' : ('value="' + name + '" ') %>/>
  <textarea class="form-control" placeholder="Description" name="desc"><%- typeof desc == 'undefined' ? '' : desc %></textarea>
  <input type="text" class="form-control" placeholder="Due Date" name="due" id="due" required <%- typeof due == 'undefined' ? '' : ('value="' + due + '" ') %>/>
  <h3>Assign this to the following sections:</h3>
  <ul class="section-list">
    <% if(typeof rows != 'undefined') {
        for(i in rows) { %>
          <li><label><input type="checkbox" name="section[]" value="<%= rows[i].id %>"<%= preselect == rows[i].id ? ' checked' : '' %> /><%= rows[i].name %></label></li>
    <%  }
       } %>
  </ul>
  <button type="submit" class="btn btn-lg btn-primary btn-block">Create</button>
</form>
