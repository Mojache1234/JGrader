<div class="page-header">
  <h1>Assignments</h1>
  <a href="/teacher/assignment/create"></a>
</div>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Assigned To</th>
        <th>Due</th>
        <th>Completed</th>
        <th>Graded</th>
      </tr>
    </thead>
    <tbody>
      <% if(rows.length == 0) { %>
        <tr>
          <td colspan="3">You have not posted any assignments.</td>
        </tr>
      <% } else {
          for(i in rows) {%>
            <tr>
              <td><a href="/teacher/assignment/<%= rows[i].aid %>"><%= rows[i].aname %></a></td>
              <td><a href="/teacher/section/<%= rows[i].sid %>"><%= rows[i].sname %></a></td>
              <td><%= strftime('%b %d, %l:%M %p', new Date(rows[i].due)) %></td>
              <td>5/23</td>
              <td>3/5</td>
            </tr>
       <% }
         } %>
    </tbody>
  </table>
</div>