<div class="page-header">
  <h1>Assignments</h1>
  <a href="/teacher/assignment/create" class="right plus-button"><span class="glyphicon glyphicon-plus-sign"></span></a>
</div>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Assigned To</th>
        <th>Due</th>
        <th>Completed</th>
        <th>Graded</th>
      </tr>
    </thead>
    <tbody>
      <% if(rows.length == 0) { %>
        <tr>
          <td colspan="5">You have not posted any assignments.</td>
        </tr>
      <% } else {
          for(i in rows) {%>
            <tr>
              <td><a href="/teacher/assignment/<%= rows[i].aid %>"><%= rows[i].aname %></a></td>
              <td><a href="/teacher/section/<%= rows[i].sid %>"><%= rows[i].sname %></a></td>
              <%
                var due = new Date(rows[i].due);
                var dueStr = strftime(due.getYear() == new Date(Date.now()).getYear() ? '%b %d, %l:%M %p' : '%b %d, %Y', due);
              %>
              <td title="<%= strftime('%b %d %Y, %l:%M %p', due) %>"><%= dueStr %></td>
              <td><%= rows[i].complete %> of <%= rows[i].total %></td>
              <td><%= rows[i].graded %> of <%= rows[i].complete %></td>
            </tr>
       <% }
         } %>
    </tbody>
  </table>
</div>