<div class="page-header" id="header-assignments">
  <div class="left-header">
    <h1>Assignments</h1>
  </div>
  <div class="right-header">
    <div class="name"><a href="/teacher/assignment/<%= assignment.id %>"><%= assignment.name %></a> // Test Cases</div>
    <a href="caseCreate" class="right plus-button" data-toggle="tooltip" data-placement="left" title="" data-original-title="Add Cases"><span class="fa fa-plus"></span></a>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-linked">
    <thead>
      <tr>
        <th>Input</th>
        <th>Output</th>
      </tr>
    </thead>
    <tbody>
      <% if(testCases.length == 0) { %>
        <tr>
          <td colspan="3">You have not created any test cases.</td>
        </tr>
      <% } else {
          for(i in testCases) { %>
            <tr>
              <td><%= testCases[i].input %></td>
              <td><%= testCases[i].output %></td>
              <td><span class="fa fa-trash-o" data-toggle="tooltip" data-placement="left" title="Delete" onclick="confirmDelete(<%= assignment.id + ',' + testCases[i].id %>)"></span></td>
            </tr>
       <% }
         } %>
    </tbody>
  </table>
</div>

<!-- Confirm if they want to delete the case -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Confirmation</h4>
      </div>
      <div class="modal-body">
        Are you sure you want to delete this test case?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-danger">Delete</button>
      </div>
    </div>
  </div>
</div>
