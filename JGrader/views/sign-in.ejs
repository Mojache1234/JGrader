  <body class="signin">

    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="navbar-header">
        <a class="navbar-brand" href="/student">jGrader</a>
      </div>
      <div id="navbar" class="navbar-collapse collapse">
        <ul class="nav navbar-nav navbar-right">
          <li id="link-home"><a href="/">Home</a></li>
          <li id="link-learn"><a href="/#learn">Learn</a></li>
          <li id="link-sign-in"><a href="/sign-in">Sign In</a></li>
        </ul>
      </div>
    </nav>

    <div class="container sign-form">
      <form class="form-signin" role="form" action="/sign-in" method="POST">
  		  <h2 class="form-signin-heading">Sign in</h2>
        <% if(typeof error != 'undefined') { %>
          <div class="alert alert-danger" role="alert"><%- error %></div>
        <% } %>
        <label for="email">Email</label>
      	<input type="email" class="form-control" name="email" id="email" required autofocus<%- typeof email == 'undefined' ? '' : ' value="'+email+'"' %>>
        <label for="password">Password</label>
      	<input type="password" class="form-control" name="password" id="password" required>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>
  		</form>
    </div> <!-- /container -->


