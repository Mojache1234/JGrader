  <body>

    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="navbar-header">
        <a class="navbar-brand" href="/">jGrader</a>
      </div>
      <div id="navbar" class="navbar-collapse collapse">
        <ul class="nav navbar-nav navbar-right">
          <li id="link-home"><a href="/">Home</a></li>
          <li id="link-learn"><a href="/#learn">Learn</a></li>
          <li id="link-sign-in"><a href="/sign-in">Sign In</a></li>
        </ul>
      </div>
    </nav>

    <div class="container form sign-form">
      <form class="form-signin" role="form" action="/sign-up" method="POST">
  		  <h2 class="form-signin-heading">Sign up</h2>
        <% if(typeof error != 'undefined') { %>
          <div class="alert alert-danger" role="alert"><%= error %></div>
        <% } %>
        <label for="fname">First Name</label>
        <input type="text" class="form-control" name="fname" id="fname" required autofocus<%- typeof user == 'undefined' ? '' : ' value="'+user.fname+'"' %>>
        <label>Last Name</label>
        <input type="text" class="form-control" name="lname" id="lname" required<%- typeof user == 'undefined' ? '' : ' value="'+user.lname+'"' %>>
        <label>Email</label>
      	<input type="email" class="form-control" name="email" id="email" required<%- typeof user == 'undefined' ? '' : ' value="'+user.email+'"' %>>
        <label>Password</label>
      	<input type="password" class="form-control" name="password" id="password" required>
        <div class="iama">
          I am a:
          <label><input type="radio" name="role" value="student" required<%- (typeof user == 'undefined' || user.role == 'student') ? ' checked' : '' %>>Student</label>
          <label><input type="radio" name="role" value="teacher"<%- (typeof user != 'undefined' && user.role == 'teacher') ? ' checked' : '' %>>Teacher</label>
          <!-- <label title="Teaching Assistant"><input type="radio" name="role" value="assistant"<%- (typeof user != 'undefined' && user.role == 'assistant') ? ' checked' : ''%>>T.A.</label> -->
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Create account</button>
  		</form>
    </div> <!-- /container -->


