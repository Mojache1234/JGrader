<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="icon" href="/favicon.ico">

    <title><%= typeof title == 'undefined' ? '' : (title + ' | ') %>jGrader</title>

    <!-- Bootstrap core CSS -->
    <link href="/stylesheets/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="/stylesheets/shared.css" rel="stylesheet">
    <link href="/stylesheets/section.css" rel="stylesheet">

    <% if(typeof css != 'undefined') {
        for(i in css) { %>
          <link href="/stylesheets/<%= css[i] %>.css" rel="stylesheet">
        <% }
      } %>

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-59832097-1', 'auto');
      ga('send', 'pageview');
    </script>
  </head>

  <body<%- typeof onload == 'undefined' ? '' : (' onload="' + onload + '"') %>>

    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="navbar-header">
        <a class="navbar-brand" href="/teacher">jGrader</a>
      </div>
      <div id="navbar" class="navbar-collapse collapse">
        <ul class="nav navbar-nav navbar-right">
          <li id="link-home"><a href="/teacher/feedback">Feedback</a></li>
          <li id="link-learn"><a href="/teacher/settings">Settings</a></li>
          <li id="link-sign-in"><a href="/log-out">Log out</a></li>
        </ul>
      </div>
    </nav>

    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-3 col-md-2 sidebar">
          <ul class="nav nav-sidebar">
            <li<%- page == 0 ? ' class="active"' : '' %>><a href="/teacher/section">Classes</a></li>
            <li<%- page == 1 ? ' class="active"' : '' %>><a href="/teacher/assignment">Assignments</a></li>
            <li<%- page == 2 ? ' class="active"' : '' %>><a href="/teacher/student">Students</a></li>
          </ul>
        </div>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main teacher-main">
          <noscript>
            <div class="alert alert-warning" role="alert">
              You have JavaScript turned off! Many features of this site will not work!
            </div>
          </noscript>
          <% if(mustResetPass) { %>
            <div class="alert alert-danger" role="alert">
              Please go to the <a href="/teacher/settings">settings</a> and change your password.
            </div>
          <% } %>
          <% if(nosupport) { %>
            <div class="alert alert-warning" role="alert">
              Your browser is not supported. Consider <a href="http://browsehappy.com/" target="_blank">upgrading to a newer one</a>.
            </div>
          <% } %>
          <% if(typeof error != 'undefined') { %>
            <div class="alert alert-danger alert-dismissable" role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <%= error %>
            </div>
          <% } %>
          <% if(typeof success != 'undefined') { %>
            <div class="alert alert-success alert-dismissable" role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <%= success %>
            </div>
          <% } %>
          <div class="alert alert-warning" role="alert">
            jGrader will be shutting down on Sunday, April 23rd due to increasing costs. Our codebase is now open-source and available on <a href="https://github.com/gregcarlin/JGrader">GitHub</a>. We are sorry for any inconvenience this may cause. Feel free to <a href="mailto:contact@jgrader.com">contact us</a> with any questions you may have.
          </div>
          <%- content %>
          <%- content %>
        </div>
      </div>
    </div>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="/javascripts/jquery-2.1.1.min.js"></script>
    <script src="/javascripts/bootstrap.min.js"></script>
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="/javascripts/ie10-viewport-bug-workaround.js"></script>

    <% 
      if(typeof js != 'undefined') {
        for(i in js) { 
          if(js[i].slice(0, 4) != 'http') js[i] = '/javascripts/' + js[i] + '.js';
    %>
          <script type="text/javascript" src="<%= js[i] %>"></script>
    <%
        }
      } 
    %>
  </body>
</html>
